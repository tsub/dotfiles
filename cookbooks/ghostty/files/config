font-family = "FiraCode Nerd Font Mono"
font-size = 12
background-opacity = 0.95
confirm-close-surface = false

# フォントのリガチャによって neovim で `ます` などが文字化けするのを防ぐ
# v1.2 からデフォルトで無効になったらしい
# font-feature = -dlig

# `ctrl+[` で `91;5u` が入力されるのを防ぐ
# See: https://github.com/ghostty-org/ghostty/discussions/5071
keybind=ctrl+left_bracket=text:\x1b

# ctrl+` でクイックターミナルを表示する
# See: https://github.com/ghostty-org/ghostty/discussions/3610
keybind=global:ctrl+grave_accent=toggle_quick_terminal

# クイックターミナル
quick-terminal-position=center
quick-terminal-animation-duration=0
quick-terminal-autohide=false

# zellij で option (alt) キーを使えるようにする
# See: https://github.com/ghostty-org/ghostty/discussions/3483#discussioncomment-11716750
macos-option-as-alt = left
keybind = alt+left=unbind
keybind = alt+right=unbind

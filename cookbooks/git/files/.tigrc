# main view
set main-view = id date author commit-title:graph=yes,refs=yes

# Add verbose option to git commit
bind status C !git commit -v

# Add keybind for git rebase
# see http://sue445.hatenablog.com/entry/2014/08/07/015811
bind main R !git rebase -i %(commit)
bind diff R !git rebase -i %(commit)

# Jump GitHub commit page
# see http://hisaichi5518.hatenablog.jp/entry/2017/02/09/160007
bind generic P @sh -c 'hub browse -- commit/%(commit)'

# Fixup commit
# see http://qiita.com/yuku_t/items/04853c9aecb40edadbb2
bind diff F ?!git commit -a --fixup %(commit)
bind main F ?!git commit -a --fixup %(commit)

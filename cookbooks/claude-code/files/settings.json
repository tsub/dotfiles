{
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(terraform fmt:*)",
      "Bash(terraform init:*)",
      "Bash(terminal-notifier:*)",
      "Bash(terragrunt run:*)",
      "mcp__github__get_file_contents"
    ],
    "deny": [
      "Bash(terragrunt apply:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -message 'タスクが完了しました' -title 'Claude Code' -subtitle '処理終了' -sound name Hero"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -message 'ユーザーアクションが必要です' -title 'Claude Code' -subtitle '通知' -sound name Hero"
          }
        ]
      }
    ]
  }
}

#! /bin/sh

set -eu

version='1.12.7'

basedir=$(dirname ${0})

if [ -f "$basedir/mitamae" ] && [ "$($basedir/mitamae version)" = "mitamae v$version" ]; then
  exit
fi

case "$(uname -sm)" in
  "Darwin x86_64")
    mitamae_bin="mitamae-x86_64-darwin"
    ;;
  "Darwin arm64")
    mitamae_bin="mitamae-aarch64-darwin"
    ;;
  "Linux x86_64")
    mitamae_bin="mitamae-x86_64-linux"
    ;;
  *)
    echo "unknown uname: $(uname)"
    exit 1
    ;;
esac

curl -fL -o "${basedir}/mitamae" "https://github.com/itamae-kitchen/mitamae/releases/download/v${version}/${mitamae_bin}"
chmod +x "${basedir}/mitamae"
